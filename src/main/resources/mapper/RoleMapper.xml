<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stictch.dao.RoleDao">
    <resultMap id="result" type="com.stictch.entity.Role">
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <result property="powerId" column="power_id"/>
        <result property="roleName" column="role_name"/>
        <collection property="powerList" ofType="com.stictch.entity.Power">
            <id property="powerId" column="power_id"/>
            <result property="roleId" column="role_id"/>
            <result property="path" column="path"/>
            <result property="powerName" column="power_name"/>
            <result property="powerTitle" column="power_title"/>
        </collection>
    </resultMap>
    <select id="findPower" resultMap="result">
        select * from power,role where role.power_id = power.power_id;
    </select>

</mapper>